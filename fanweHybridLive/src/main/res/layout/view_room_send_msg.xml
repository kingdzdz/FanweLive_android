<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">

    <com.fanwe.lib.switchbutton.SDSwitchButton
        android:id="@+id/sb_pop"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@id/lib_sb_view_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_live_pop_msg_normal"/>

        <ImageView
            android:id="@id/lib_sb_view_checked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/bg_live_pop_msg_selected"/>

        <ImageView
            android:id="@id/lib_sb_view_thumb"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:src="@drawable/selector_sb_thumb_pop_msg"/>
    </com.fanwe.lib.switchbutton.SDSwitchButton>

    <EditText
        android:id="@+id/et_content"
        style="@style/res.Edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_weight="1"
        android:background="@drawable/res_layer_white_stroke_corner"
        android:hint="@string/live_send_msg_hint_normal"
        android:minHeight="40dp"/>

    <TextView
        android:id="@+id/tv_send"
        style="@style/btn_base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:background="@drawable/res_sel_main_color_corner"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="发送"
        android:textColor="@color/white"/>

</LinearLayout>