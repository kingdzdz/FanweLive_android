<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:padding="@dimen/margin_xs">

        <FrameLayout
            android:id="@+id/fl_button_close_xr_dialog_report_type_selection"
            android:layout_width="@dimen/height_button_s"
            android:layout_height="@dimen/height_button_s"
            android:layout_gravity="right"
            android:background="@drawable/xr_selector_transparent_gray"
            android:foreground="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/height_icon_m"
                android:layout_height="@dimen/height_icon_m"
                android:layout_gravity="center"
                android:src="@drawable/xr_ic_close_dialog"/>
        </FrameLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view_xr_dialog_report_type_selection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"            />

        <Button
            android:id="@+id/btn_confirm_xr_dialog_report_type_selection"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_button_s"
            android:layout_marginTop="@dimen/base_p_m_15"
            android:layout_marginLeft="@dimen/base_p_m_5"
            android:layout_marginRight="@dimen/base_p_m_5"
            android:layout_marginBottom="@dimen/base_p_m_5"
            android:text="@string/report_dynamic"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_button"
            android:background="@drawable/xr_selector_color_primary_round"
            android:orientation="horizontal"/>

    </LinearLayout>

</android.support.v7.widget.CardView>